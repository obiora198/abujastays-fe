# Frontend Environment Variables
# Copy this file to .env.local and fill in your actual values

# GraphQL API URL
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:5000/graphql

# Frontend URL (for production)
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000

# Google OAuth (if using Google login)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id_here

# Cloudinary (for image uploads)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# App Configuration
NEXT_PUBLIC_APP_NAME=Abuja Stays
NEXT_PUBLIC_APP_DESCRIPTION=Find and book the best hotels in Abuja

# Paystack Configuration
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key_here 